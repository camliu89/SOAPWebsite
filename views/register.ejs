<!doctype html>
<html>
  
  <head>
    <title>Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type">
    <link rel="stylesheet" href="/assets/css/bootstrap.css">
    <link rel="stylesheet" href="/assets/css/bootstrap-responsive.css">
    <link href="/css/form.css" rel="stylesheet">

  </head>
  
  <body style="background-color: #aeaeae">
    <div class="container">
      <h2 class="text-center" style="color:#024731"><img src="/images/soap/AP_icon.png"  height="80" width="80">&#160;Advanced Practice</h2>

      <% if (hasError) { %>
        <div class="alert alert-danger">
        <p class="text-center"><strong>ERROR! </strong> <%=error%></p> 
        </div>
      <%} %>

      <form action="/submitRegister" method="POST" class="form-signin" id="form">
        <input class="form-control" placeholder="Email" name="email" type="email" required>
        <br>
        <input class="form-control" name="first" placeholder="First Name" type="text" required>
        <br>
        <input class="form-control" name="last" placeholder="Last Name" type="text" required>
        <br>
        <input class="form-control" name="password" placeholder="Password" type="password" required>
        <br>
        <button type="submit" class="btn btn-lg btn-success btn-block">Register</button>
      </form>
    </div>

    <img id="logo" src="/images/UHM_Nursing_mobile_banner.png" class="img-responsive" alt="Responsive image">
  </body>


    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
</html>